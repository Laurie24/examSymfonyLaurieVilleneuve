{% extends 'base.html.twig' %}
{% block body %}

    <div class="box">
        <div class="row">
            <a class="btn padding" href="{{ path('article')}}">Retour</a>
        </div>
    </div>

<div class="box">
    <div class="row">
        <div class="card shadow" style="height: 45rem; width: 40rem;">
            <img src="/uploads/images/{{ article.image }}" style="width: 40rem;" class="card-img-top">
            <div class="card-body">
                <h4>{{ article.titre }}</h4>
                <br>
                <p class="card-text">{{ article.description }}</p>
            </div>
        </div>
    </div>
</div>


{% endblock %}
